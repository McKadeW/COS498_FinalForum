<!-- Comments page that will display the main forum content -->
<!DOCTYPE html>
<html>
<head>
	<title>{{title}}</title>
	<link rel="stylesheet" href="/styles.css">
</head>
<body>
	{{> header}}

	<!-- Main section that will display the list of posted comments (if any) -->
	<main class="content">
		<h2>Posted Comments</h2>
		<p>Post comments to share with others!</p>

		<!-- If there is an issue displaying comments/reactions -->
		{{#if error}}
                        <p class="error-message">{{error}}</p>
                {{/if}}		

		<!-- If there are comments, display them -->
		{{#if comments.length}}
			<br><br>
			<ul class="comment-list">
				{{#each comments}}
					<li class="comment-item">
						<!-- Display the users display name, not username and color it to match profile settings -->
						<p><strong style="color: {{profile_data}}">{{display_name}}</strong></p>
						<p><span class="timestamp">{{created_at}}</span></p>
						<p class="comment-text">{{text}}</p>
						{{> reactions}}
					</li>
				{{/each}}
			</ul>
		{{else}}
			<br>
			<p>No Comments Yet! Be the first to make a post!</p>
		{{/if}}
		{{> page_numbers}}
	</main>

	{{> footer}}
</body>
</html>
